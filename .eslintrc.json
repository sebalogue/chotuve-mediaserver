{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
      "eslint:recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./db"]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.jsx"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
